<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/TituloRepositoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TituloRepositoryTextView"
        android:textColor="@android:color/black"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DescricaoRepositoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="DescricaoRepositoryTextView"
        app:layout_constraintStart_toStartOf="@+id/TituloRepositoryTextView"
        app:layout_constraintTop_toBottomOf="@+id/TituloRepositoryTextView" />

    <View
        android:id="@+id/LanguageColorView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/DescricaoRepositoryTextView"
        app:layout_constraintTop_toBottomOf="@+id/DescricaoRepositoryTextView"/>

    <TextView
        android:id="@+id/LanguageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="LanguageTextView"
        app:layout_constraintBottom_toBottomOf="@+id/LanguageColorView"
        app:layout_constraintStart_toEndOf="@+id/LanguageColorView" />

</androidx.constraintlayout.widget.ConstraintLayout>